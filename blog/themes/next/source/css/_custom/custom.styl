// Custom styles.
// 文章底部距离
.posts-expand {
    padding-top: 0;
}
// post-block 宽度
.post-block {
  width: 930px;
}
// 首页文章预览图
.img-topic {
  width: auto;
  height: 300px;
  // 让缩略图变黑白
  -webkit-filter: grayscale(100%);
  -moz-filter: grayscale(100%);
  -ms-filter: grayscale(100%);
  -o-filter: grayscale(100%);

  filter: grayscale(100%);

  filter: gray;
}
.img-topic:hover {
  // 让缩略图变彩色
  -webkit-filter: grayscale(0%);
  -moz-filter: grayscale(0%);
  -ms-filter: grayscale(0%);
  -o-filter: grayscale(0%);

  filter: grayscale(0%);

  filter: none;
}
// 相册样式，统一大小
.post-gallery .post-gallery-img {
  margin: 4px;
  display: inline-block;
  width: 200px;
  height: 400px;
  background-size: cover;
  background-position: center;

  // 让缩略图变黑白
  -webkit-filter: grayscale(100%);
  -moz-filter: grayscale(100%);
  -ms-filter: grayscale(100%);
  -o-filter: grayscale(100%);

  filter: grayscale(100%);

  filter: gray;
}
.post-gallery {
  text-align: center;
}
.post-gallery-row {
  margin: auto;
}
.post-gallery .post-gallery-img:hover {
  // 让缩略图变彩色
  -webkit-filter: grayscale(0%);
  -moz-filter: grayscale(0%);
  -ms-filter: grayscale(0%);
  -o-filter: grayscale(0%);

  filter: grayscale(0%);

  filter: none;
}
